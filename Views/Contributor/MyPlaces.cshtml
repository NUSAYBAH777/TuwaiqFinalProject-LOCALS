@model IEnumerable<lLOCALS.Models.Place>

<div class="container mt-5 px-4" dir="rtl">
    <div class="admin-card shadow-lg border-0 rounded-5 overflow-hidden bg-white">

        @* هيدر زيتي فخم متناسق مع الهوية الوطنية الجديدة *@
        <div class="py-4 text-center shadow-sm" style="background: linear-gradient(135deg, var(--national-green) 0%, #003624 100%);">
            <h2 class="fw-bold text-white m-0"> معالمي المُضافة</h2>
            <p class="text-white-50 mt-2 mb-0">إدارة الأماكن التي قمت بمشاركتها مع المجتمع</p>
        </div>

        <div class="card-body p-4">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h4 class="fw-bold text-national mb-0">قائمة مساهماتك</h4>
                <a asp-action="Create" class="btn btn-national rounded-pill px-4 shadow-sm">
                    إضافة معلم جديد +
                </a>
            </div>

            <div class="table-responsive">
                <table class="table table-hover align-middle text-end">
                    <thead class="bg-soft-sand text-national">
                        <tr>
                            <th class="py-3 px-4 border-bottom-heritage">المعلم</th>
                            <th class="border-bottom-heritage">الحي</th>
                            <th class="border-bottom-heritage">التصنيف</th>
                            <th class="border-bottom-heritage">حالة القبول</th>
                            <th class="text-center border-bottom-heritage">الإجراء</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var place in Model)
                        {
                            <tr>
                                <td class="fw-bold py-3 px-4 text-dark">@place.Title</td>
                                <td>📍 @place.District?.Name</td>
                                <td><span class="badge badge-heritage">@place.Category?.Name</span></td>
                                <td>
                                    @if (place.Status == "Approved")
                                    {
                                        <span class="badge bg-success rounded-pill px-3">منشور</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning text-dark rounded-pill px-3">قيد المراجعة</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <a asp-action="Edit" asp-route-id="@place.PlaceId" class="btn btn-sm btn-outline-national rounded-pill px-3">تعديل</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                @if (!Model.Any())
                {
                    <div class="text-center py-5">
                        <p class="text-muted fs-5">لم تقم بإضافة أي أماكن بعد. ابدأ الآن!</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        :root {
            --national-green: #004d33; /* زيتي غامق */
            --heritage-brown: #8b5a2b; /* بني تراثي */
            --soft-sand: #f8f5f0; /* رملي فاتح للجداول */
        }

        /* تعديل الخلفية العامة للصفحة لتكون بيج */
        body {
            background-color: #f4f1ea !important;
        }

        .text-national {
            color: var(--national-green);
        }

        .bg-soft-sand {
            background-color: var(--soft-sand);
        }

        .border-bottom-heritage {
            border-bottom: 2px solid var(--heritage-brown) !important;
        }

        .btn-national {
            background-color: var(--national-green);
            color: white;
            border: none;
            border-bottom: 3px solid var(--heritage-brown);
            transition: 0.3s;
        }

            .btn-national:hover {
                background-color: #003624;
                color: white;
                transform: translateY(-2px);
                box-shadow: 0 4px 12px rgba(0,77,51,0.2);
            }

        .btn-outline-national {
            border: 1px solid var(--national-green);
            color: var(--national-green);
        }

            .btn-outline-national:hover {
                background-color: var(--national-green);
                color: white;
            }

        .badge-heritage {
            border: 1px solid var(--heritage-brown);
            color: var(--heritage-brown);
            background: transparent;
        }

        .admin-card {
            border-radius: 25px;
            border-bottom: 6px solid var(--heritage-brown) !important;
        }
    </style>
}
@model lLOCALS.Models.Place

@{
    ViewData["Title"] = "تعديل معلم - iLOCALS";
}

<div class="container mt-5 px-4" dir="rtl">
    <div class="admin-card shadow-lg border-0 rounded-5 overflow-hidden bg-white mx-auto" style="max-width: 1100px;">

        <div class="auth-header py-4 text-center text-white">
            <h2 class="fw-bold m-0">📝 تعديل بيانات المعلم</h2>
            <p class="small opacity-75 mt-2 mb-0">قم بتحديث معلومات "@Model.Title" ثم احفظ التغييرات</p>
        </div>

        <div class="card-body p-4 p-md-5">
            <form asp-action="Edit" method="post" enctype="multipart/form-data">

                <input type="hidden" asp-for="PlaceId" />
                <input type="hidden" asp-for="AddedByUserId" />
                <input type="hidden" asp-for="CreatedAt" />
                <input type="hidden" asp-for="Latitude" id="Latitude" />
                <input type="hidden" asp-for="Longitude" id="Longitude" />

                <div class="row">
                    <div class="col-lg-5 text-end order-lg-1">
                        <div class="mb-3">
                            <label asp-for="Title" class="form-label fw-bold text-national small">اسم المكان</label>
                            <input asp-for="Title" class="form-control custom-input-field" required />
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label fw-bold text-national small">الوصف الجديد</label>
                            <textarea asp-for="Description" class="form-control custom-input-field" rows="3"></textarea>
                        </div>

                        <div class="row">
                            <div class="col-6 mb-3">
                                <label asp-for="CategoryId" class="form-label fw-bold text-national small">التصنيف</label>
                                <select asp-for="CategoryId" class="form-select custom-input-field" asp-items="ViewBag.CategoryId"></select>
                            </div>
                            <div class="col-6 mb-3">
                                <label asp-for="DistrictId" class="form-label fw-bold text-national small">الحي</label>
                                <select asp-for="DistrictId" class="form-select custom-input-field" asp-items="ViewBag.DistrictId"></select>
                            </div>
                        </div>
                        <div class="mb-4">
    <label class="form-label fw-bold text-national small">📸 الصور الحالية (انقر للحذف)</label>
    <div class="d-flex flex-wrap gap-3 p-3 bg-light rounded-4 border-heritage-thin">
        @if (Model.Images != null && Model.Images.Any())
        {
            @foreach (var img in Model.Images)
            {
                                        <div class="position-relative" id="img-container-@img.PlaceImageId">
                    <img src="@Url.Content("~" + img.ImagePath)" 
                         class="rounded-3 shadow-sm border" 
                         style="width: 120px; height: 120px; object-fit: cover;" />
                    
                    <button type="button" 
                            class="btn btn-danger btn-sm position-absolute top-0 start-0 m-1 rounded-circle d-flex align-items-center justify-content-center"
                            style="width: 22px; height: 22px; padding: 0; font-size: 14px;"
                                                    onclick="markForDeletion(@img.PlaceImageId)">
                        &times;
                    </button>
                    
                                            <input type="hidden" name="deletedImageIds" value="" id="delete-input-@img.PlaceImageId" />
                </div>
            }
        }
        else
        {
            <div class="text-center w-100 py-2">
                <span class="text-muted small">لم يتم العثور على صور لهذا المعلم في قاعدة البيانات.</span>
            </div>
        }
    </div>
</div>

                        <div class="mb-4 border-top pt-3">
                            <label class="form-label fw-bold text-national small">📸 تحديث الصور</label>
                            <input type="file" name="imageFiles" class="form-control custom-input-field" multiple accept="image/*" />
                            <small class="text-muted d-block mt-1" style="font-size: 0.75rem;">رفع صور جديدة سيضيفها إلى معرض صور هذا المعلم.</small>
                        </div>

                        <div class="mt-4">
                            <button type="submit" class="btn btn-national w-100 py-2 rounded-pill fw-bold shadow-sm">حفظ التعديلات</button>
                            <a asp-action="MyPlaces" class="btn btn-outline-national w-100 rounded-pill py-2 mt-2">إلغاء والعودة</a>
                        </div>
                    </div>

                    <div class="col-lg-7 mb-4 mb-lg-0 order-lg-2">
                        <label class="form-label fw-bold d-block text-end text-national small mb-2">تعديل الموقع على الخريطة</label>
                        <div id="map" class="shadow-sm border-heritage-thin rounded-4" style="height: 500px;"></div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />
    <style>
        :root {
            --national-green: #004d33;
            --heritage-brown: #8b5a2b;
            --sand-bg: #f4f1ea;
        }

        body {
            background-color: var(--sand-bg) !important;
        }

        .text-national {
            color: var(--national-green);
        }

        .admin-card {
            border-bottom: 6px solid var(--heritage-brown) !important;
        }

        .auth-header {
            background: var(--national-green);
            position: relative;
        }

            .auth-header::after {
                content: "";
                position: absolute;
                bottom: 0;
                left: 0;
                right: 0;
                height: 4px;
                background: var(--heritage-brown);
                opacity: 0.8;
            }

        .custom-input-field {
            border: 1px solid #dee2e6;
            border-radius: 12px !important;
            padding: 0.6rem 1rem;
            font-size: 0.9rem;
        }

            .custom-input-field:focus {
                border-color: var(--national-green);
                box-shadow: 0 0 0 0.2rem rgba(0, 77, 51, 0.1);
            }

        .btn-national {
            background-color: var(--national-green);
            color: white;
            border: none;
            transition: all 0.3s ease;
        }

            .btn-national:hover {
                background-color: #003624;
                color: white;
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(0, 77, 51, 0.3);
            }

        .btn-outline-national {
            border: 1px solid var(--national-green);
            color: var(--national-green);
        }

        .border-heritage-thin {
            border: 2px solid rgba(139, 90, 43, 0.2);
        }
    </style>
}

@section Scripts {
    <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
    <script>
        delete L.Icon.Default.prototype._getIconUrl;
        L.Icon.Default.mergeOptions({
            iconRetinaUrl: 'https://unpkg.com/leaflet@1.7.1/dist/images/marker-icon-2x.png',
            iconUrl: 'https://unpkg.com/leaflet@1.7.1/dist/images/marker-icon.png',
            shadowUrl: 'https://unpkg.com/leaflet@1.7.1/dist/images/marker-shadow.png',
        });

        var initialLat = @Model.Latitude;
        var initialLng = @Model.Longitude;

        var map = L.map('map').setView([initialLat, initialLng], 15);
        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png').addTo(map);

        var marker = L.marker([initialLat, initialLng], {draggable: true}).addTo(map);

        marker.on('dragend', function(e) {
            var latlng = marker.getLatLng();
            document.getElementById("Latitude").value = latlng.lat;
            document.getElementById("Longitude").value = latlng.lng;
        });

        map.on('click', function(e) {
            marker.setLatLng(e.latlng);
            document.getElementById("Latitude").value = e.latlng.lat;
            document.getElementById("Longitude").value = e.latlng.lng;
        });

                    function markForDeletion(imageId) {
            if (confirm("هل أنت متأكد من رغبتك في حذف هذه الصورة؟")) {
                // نضع القيمة في الحقل المخفي
                document.getElementById("delete-input-" + imageId).value = imageId;
                // نخفي الحاوية الصحيحة
                document.getElementById("img-container-" + imageId).style.display = "none";
            }
        }
    </script>
}